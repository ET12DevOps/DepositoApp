<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <header>
        <%- include('../partials/header'); %>
    </header>

    <section>

        <div class="container is-fluid">
            <div>
                <h1 class="title is-2 mt-4">
                    <%= title %>
                </h1>
            </div>

            <div class="field">
                <label class="label">IDENTIFICADOR</label>
                <div class="control">
                    <input class="input" type="text" value="<%= idUnidad %>" name="idUnidad" id="idUnidad" disabled>
                </div>
            </div>

            <div class="my-4">
                <div class="field is-small">
                  <label class="label">Nombre</label>
                  <input id="nombre" type="text" class="input">
                </div>
              </div>

              <div class="my-4">
                <div class="field is-small">
                  <label class="label">Referencia</label>
                  <input id="referencia" type="text" class="input">
                </div>
              </div>

            <div class="my-4">
                <button id="save-unidades" type="submit" class="button is-outlined is-primary">Guardar</button>
                <a class="button is-outlined" href="/unidades">Cancelar</a>
            </div>
        </div>
    </section>
    <script src="../../public/js/unidades/edit.js"></script>
</body>

</html>