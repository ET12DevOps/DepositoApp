<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <header>
        <%- include('../partials/header'); %> 
    </header>

    <section>
        <div class="container is-fluid">
            <div>
                <h1 class="title is-2 mt-4">
                    <%= title %>
                </h1>
            </div>

            <div class="my-6">
                <div class="field">
                    <label class="label">IDENTIFICADOR</label>
                    <div class="control">
                        <input class="input" type="text" value="<%= consumibleId %>" name="consumibleId" id="consumibleId" disabled>
                    </div>
                </div>
                <div class="my-6">
                    <div class="field">
                        <label class="label">NOMBRE</label>
                        <div class="control">
                            <input class="input" type="text"  id="nombre">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">CODIGO</label>
                        <div class="control">
                            <input class="input" type="text"  id="codigo">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">DETALLE</label>
                        <div class="control">
                            <input class="input" type="text"  id="detalle">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">EXISTENCIA INICIAL</label>
                        <div class="control">
                            <input class="input" type="text"  id="existenciaInicial">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">EXISTENCIA ACTUAL</label>
                        <div class="control">
                            <input class="input" type="text" id="existenciaActual">
                        </div>
                    </div>
                    <div class="field">
                        <div class="my-6">
                            <div class="field">
                                <label class="label">UNIDADES</label>
                        <input id="enabled" type="checkbox" name="Unidad" class="switch is-outlined is-info is-rtl">
                        <div class="select">
                            <select id="unidades">
                            </select>
                          </div>
                    </div>
                    
                <div class="mt-6">
                    <h3 class="subtitle is-5">Â¿Desea eliminar el rol?</h3>
                    <button id="save-consumible" type="submit" class="button is-outlined is-danger">Eliminar</button>
                    <a class="button is-outlined" href="/consumibles">Cancelar</a>
                </div>
            </div>
        </div>
    </section>
    <script src="../../public/js/consumibles/delete.js"></script>
</body>

</html>