<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <header>
        <%- include('../partials/header'); %>
    </header>

    <section>

        <div class="container is-fluid">
            <div>
                <h1 class="title is-2 mt-4">
                    <%= title %>
                </h1>
            </div>

            <div class="my-6">
                <div class="field">
                    <label class="label">NOMBRE</label>
                    <div class="control">
                        <input class="input" type="text" value="<%= consumibleId %>" name="id" id="consumibleId" disabled>
                    </div>
                </div>
                <div class="field">
                    <label class="label">CODIGO</label>
                    <div class="control">
                        <input class="input" type="text"  id="codigo">
                    </div>
                </div>
                <div class="field">
                    <label class="label">DETALLE</label>
                    <div class="control">
                        <input class="input" type="text"  id="detalle">
                    </div>
                </div>
                <div class="field">
                    <label class="label">EXISTENCIA INICIAL</label>
                    <div class="control">
                        <input class="input" type="text"  id="existenciaInicial">
                    </div>
                </div>
                <div class="field">
                    <label class="label">EXISTENCIA ACTUAL</label>
                    <div class="control">
                        <input class="input" type="text" id="existenciaActual" disabled>
                    </div>
                </div>
                <div class="field">
                    <label class="label">UNIDADES</label>
                    <div class="control">
                        <input class="input" type="text" name="updatedAt" id="updatedAt" disabled>
                    </div>
                </div>
                <button id="save-role" type="submit" class="button is-outlined is-primary">Guardar</button>
                <a class="button is-outlined" href="/consumibles">Cancelar</a>
            </div>
        </div>
    </section>
    <script src="../../public/js/consumibles/edit.js"></script>
</body>

</html>