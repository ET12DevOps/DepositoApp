<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <header>
        <%- include('../partials/header'); %>
    </header>

    <section>

        <div class="container is-fluid">
            <div>
                <h1 class="title is-2 mt-4">
                    <%= title %>
                </h1>
            </div>

            <div class="my-6">
                <div class="field">
                    <label class="label">NOMBRE</label>
                    <div class="control">
                        <input class="input" type="text" name="name" id="name">
                    </div>
                </div>
            </div>
            <div class="my-6">
                <div class="field">
                    <label class="label">CODIGO</label>
                    <div class="control">
                        <input class="input" type="text" name="name" id="name">
                    </div>
                </div>
                <div class="my-6">
                    <div class="field">
                        <label class="label">DETALLE</label>
                        <div class="control">
                            <input class="input" type="text" name="name" id="name">
                        </div>
                    </div>
                    <div class="my-6">
                        <div class="field">
                            <label class="label">EXISTENCIA INICIAL</label>
                            <div class="control">
                                <input class="input" type="number" name="name" id="name">
                            </div>
                        </div>
                        <div class="my-6">
                            <div class="field">
                                <label class="label">EXISTENCIA ACTUAL</label>
                                <div class="control">
                                    <input class="input" type="number" name="name" id="name">
                                </div>
                            </div>
                    <div class="field">
                        <input id="enabled" type="checkbox" name="enabled" class="switch is-outlined is-info is-rtl">
                        <label for="enabled" class="label is-small">ESTADO</label>
                    </div>
                    <button id="save-role" type="submit" class="button is-outlined is-primary">Guardar</button>
                    <a class="button is-outlined" href="/noconsumible">Cancelar</a>
        </div>
    </section>
    <script src="../public/js/noconsumible/add.js"></script>
</body>

</html>