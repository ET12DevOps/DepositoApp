<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <header>
        <%- include('../partials/header'); %>
    </header>

    <section>

        <div class="container is-fluid">
            <div>
                <h1 class="title is-2 mt-4">
                    <%= title %>
                </h1>
            </div>

            <div class="my-4">
                <div class="field">
                    <label class="label">NOMBRE</label>
                    <div class="control">
                        <input class="input" type="text" name="nombre" id="nombre">
                </div>
                <div class="field">
                    <label class="label">APELLIDO</label>
                    <div class="control">
                        <input class="input" type="text" name="apellido" id="apellido">
                    </div>
                </div>
                <div class="field">
                    <label class="label">EMAIL</label>
                    <div class="control">
                        <input class="input" type="text" name="email" id="email">
                    </div>
                </div>
                <div class="field">
                    <label class="label">DNI</label>
                    <div class="control">
                        <input class="input" type="number" name="dni" id="dni">
                    </div>
                </div>

                <div class="field">
                    <input id="enabled" type="checkbox" name="enabled" class="switch is-outlined is-info is-rtl">
                    <label for="enabled" class="label is-small">ESTADO</label>
                </div>
            </div>

            <div id="personas" class=""></div>
            <div class="my-4">
                <button id="save-persona" type="submit" class="button is-outlined is-primary">Guardar</button>
                <a class="button is-outlined" href="/personas">Cancelar</a>
            </div>
        </div>
    </section>
    <script src="../public/js/personas/add.js"></script>
</body>

</html>